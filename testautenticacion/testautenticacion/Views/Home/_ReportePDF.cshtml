<body>
    <div class="header">
        <img src="~/images/banner.png" alt="Banner del Reporte">
        <h2>Reporte de Monitoreos</h2>
        <h5 class="fw-light">Facultad de Ciencias Aplicadas</h5>
    </div>

    <div class="container my-4">
        <h3 class="text-center mb-4">Monitoreos Programados</h3>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Materia</th>
                    <th>Docente</th>
                    <th>Aula</th>
                    <th>Fecha</th>
                    <th>Responsable</th>
                    <th>Fecha creación</th>
                    <th>Estado</th>
                    <th>Comentarios</th>
                    <th>Feedback</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Monitoreos.Count; i++)
                {
                    var monitoreo = Model.Monitoreos[i];
                    var registro = Model.Registros.Count > i ? Model.Registros[i] : null;
                    <tr>
                        <td>@monitoreo.Materia</td>
                        <td>@monitoreo.Docente</td>
                        <td>@monitoreo.Aula</td>
                        <td>@monitoreo.Fecha.ToString("yyyy-MM-dd")</td>
                        <td>@monitoreo.Responsable</td>
                        <td>@(registro?.Fecha.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</td>
                        <td>@(registro?.Estado ?? "N/A")</td>
                        <td>@(registro?.Comentarios ?? "N/A")</td>
                        <td>@(registro?.Feedback ?? "N/A")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="footer">
        <p>Este reporte fue generado el @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
    </div>
</body>
