@{
    ViewBag.Title = "Contact";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .contact-header {
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            padding: 3rem 0;
            color: white;
            position: relative;
            overflow: hidden;
        }

            .contact-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: radial-gradient(circle at 30% 50%, rgba(255,255,255,0.1) 0%, transparent 50%);
            }

        .contact-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(99, 102, 241, 0.1);
            transition: all 0.3s ease;
        }

            .contact-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 40px rgba(99, 102, 241, 0.2);
            }

        .contact-icon {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            color: white;
            font-size: 1.25rem;
            margin-right: 1rem;
        }

        .contact-link {
            color: #6366f1;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .contact-link:hover {
                color: #8b5cf6;
            }
    </style>
</head>
<body>
    <main>
        <section class="contact-header mb-4">
            <div class="container">
                <h2 class="display-5 mb-0 text-center">Contacto</h2>
            </div>
        </section>

        <section class="container pb-5">
            <div class="row justify-content-center g-4">
                <div class="col-lg-6">
                    <div class="contact-card p-4 h-100">
                        <div class="d-flex align-items-start">
                            <div class="contact-icon">
                                <i class="fas fa-building"></i>
                            </div>
                            <div>
                                <h3 class="h5 mb-3">Dirección Corporativa</h3>
                                <p class="mb-4">
                                    One Microsoft Way<br>
                                    Redmond, WA 98052-6399<br>
                                    <span class="text-muted">Tel:</span> 425.555.0100
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="contact-card p-4 h-100">
                        <div class="d-flex align-items-start">
                            <div class="contact-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <h3 class="h5 mb-3">Departamentos</h3>
                                <p class="mb-2">
                                    <strong>Soporte</strong><br>
                                    <a href="mailto:Support@example.com" class="contact-link">
                                        Support@example.com
                                    </a>
                                </p>
                                <p class="mb-0">
                                    <strong>Marketing</strong><br>
                                    <a href="mailto:Marketing@example.com" class="contact-link">
                                        Marketing@example.com
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>