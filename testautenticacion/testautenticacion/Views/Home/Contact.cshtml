@{
    ViewBag.Title = "Contact";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Sistema de Monitoreo</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #7b002c;
        }

        .contact-header {
            background-color: #7b0000;
            padding: 3rem 0;
            color: white;
            position: relative;
        }

        .contact-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

            .contact-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
            }

        .contact-icon {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            background-color: #7b0000;
            color: white;
            font-size: 1.25rem;
            margin-right: 1rem;
        }

        .contact-link {
            color: #7b0000;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .contact-link:hover {
                color: #600000;
            }
    </style>
</head>
<body>
    <main>
        <section class="contact-header mb-4">
            <div class="container">
                <h2 class="display-5 mb-0 text-center">Contacto</h2>
            </div>
        </section>

        <section class="container pb-5">
            <div class="row justify-content-center g-4">
                <div class="col-lg-6">
                    <div class="contact-card p-4 h-100">
                        <div class="d-flex align-items-start">
                            <div class="contact-icon">
                                <i class="fas fa-building"></i>
                            </div>
                            <div>
                                <h3 class="h5 mb-3">Dirección Corporativa</h3>
                                <p class="mb-4">
                                    One Innovation Path<br>
                                    Administración, WA 9052-6399<br>
                                    <span class="text-muted">Tel:</span> 4555-0100
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="contact-card p-4 h-100">
                        <div class="d-flex align-items-start">
                            <div class="contact-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <h3 class="h5 mb-3">Departamento de Soporte</h3>
                                <div class="mb-3">
                                    <strong>Desarrollador de Software</strong><br>
                                    <a href="mailto:cristian.alas@gmail.com" class="contact-link">
                                        cristian.alas@gmail.com
                                    </a>
                                </div>

                                <div class="mb-3">
                                    <strong>Desarrollador de Software</strong><br>
                                    <a href="mailto:rolandro.andrade@gmail.com" class="contact-link">
                                        rolandro.andrade@gmail.com
                                    </a>
                                </div>

                                <div class="mb-0">
                                    <strong>Desarrollador de Software</strong><br>
                                    <a href="mailto:alejandro.estrada@gmail.com" class="contact-link">
                                        alejandro.estrada@gmail.com
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
